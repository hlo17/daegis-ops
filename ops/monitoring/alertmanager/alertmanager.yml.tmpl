route:
  receiver: slack
  group_wait: 30s
  group_interval: 2m
  repeat_interval: 2h

receivers:
  - name: slack
    slack_configs:
      - api_url: "${SLACK_WEBHOOK_URL}"
        channel: "#daegis-alerts"
        send_resolved: true
        title: "{{ .CommonAnnotations.summary }}"
        text: >-
          {{ range .Alerts -}}
          *{{ .Labels.severity | toUpper }}* {{ .Labels.alertname }} on {{ .Labels.instance }}
          {{ if .Annotations.runbook_url }} (<{{ .Annotations.runbook_url }}|runbook>){{ end }}
          {{ "\n" -}}
          {{ end }}
