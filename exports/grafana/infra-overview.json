{
  "id": 11,
  "panels": [
    {
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 10
              },
              {
                "color": "red",
                "value": 50
              }
            ]
          },
          "unit": "reqps"
        }
      },
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "datasource": {
            "uid": "${DS_PROMETHEUS}"
          },
          "expr": "sum(rate(rt_requests_total{route=\"/chat\"}[5m]))",
          "legendFormat": "RPS"
        }
      ],
      "title": "Chat RPS",
      "type": "stat"
    },
    {
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 2000
              },
              {
                "color": "red",
                "value": 3000
              }
            ]
          },
          "unit": "ms"
        }
      },
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 0
      },
      "targets": [
        {
          "datasource": {
            "uid": "${DS_PROMETHEUS}"
          },
          "expr": "histogram_quantile(0.95, sum by (le)(rate(rt_latency_ms_bucket[5m])))",
          "legendFormat": "P95"
        }
      ],
      "title": "Chat P95 (ms)",
      "type": "stat"
    },
    {
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 1
              },
              {
                "color": "red",
                "value": 2
              }
            ]
          },
          "unit": "percent"
        }
      },
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "datasource": {
            "uid": "${DS_PROMETHEUS}"
          },
          "expr": "100 * sum(rate(router_chat_errors_total[5m])) / sum(rate(rt_requests_total{route=\"/chat\"}[5m]))",
          "legendFormat": "5xx%"
        }
      ],
      "title": "Chat 5xx (%)",
      "type": "stat"
    },
    {
      "fieldConfig": {
        "defaults": {
          "max": 100,
          "min": 0,
          "thresholds": {
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "yellow",
                "value": 40
              },
              {
                "color": "green",
                "value": 70
              }
            ]
          },
          "unit": "percent"
        }
      },
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 18,
        "y": 0
      },
      "targets": [
        {
          "datasource": {
            "uid": "${DS_PROMETHEUS}"
          },
          "expr": "100 * sum(increase(rt_cache_hits_total[5m])) / (sum(increase(rt_cache_hits_total[5m]))+sum(increase(rt_cache_misses_total[5m])))",
          "legendFormat": "Hit%"
        }
      ],
      "title": "Cache Hit (%)",
      "type": "stat"
    },
    {
      "gridPos": {
        "h": 7,
        "w": 12,
        "x": 0,
        "y": 4
      },
      "targets": [
        {
          "expr": "sum by(device)(rate(node_disk_read_bytes_total{device=~\"nvme.*\"}[5m]))/1e6",
          "legendFormat": "{{device}}"
        }
      ],
      "title": "NVMe Read MB/s",
      "type": "timeseries"
    },
    {
      "gridPos": {
        "h": 7,
        "w": 12,
        "x": 12,
        "y": 4
      },
      "targets": [
        {
          "expr": "sum by(device)(rate(node_disk_written_bytes_total{device=~\"nvme.*\"}[5m]))/1e6",
          "legendFormat": "{{device}}"
        }
      ],
      "title": "NVMe Write MB/s",
      "type": "timeseries"
    },
    {
      "gridPos": {
        "h": 7,
        "w": 12,
        "x": 0,
        "y": 11
      },
      "targets": [
        {
          "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "{{instance}}"
        }
      ],
      "title": "CPU Usage (%)",
      "type": "timeseries"
    },
    {
      "gridPos": {
        "h": 7,
        "w": 12,
        "x": 12,
        "y": 11
      },
      "targets": [
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
          "legendFormat": "mem used %"
        }
      ],
      "title": "Memory Usage (%)",
      "type": "timeseries"
    },
    {
      "gridPos": {
        "h": 6,
        "w": 12,
        "x": 0,
        "y": 18
      },
      "targets": [
        {
          "expr": "up",
          "legendFormat": "{{job}}"
        }
      ],
      "title": "Service Health (up)",
      "type": "timeseries"
    },
    {
      "gridPos": {
        "h": 6,
        "w": 12,
        "x": 12,
        "y": 18
      },
      "options": {
        "reduceOptions": {
          "calcs": [
            "last"
          ]
        }
      },
      "targets": [
        {
          "expr": "(node_filesystem_avail_bytes{mountpoint=\"/\"} / node_filesystem_size_bytes{mountpoint=\"/\"}) * 100"
        }
      ],
      "title": "Root FS Free (%)",
      "type": "stat"
    }
  ],
  "refresh": "10s",
